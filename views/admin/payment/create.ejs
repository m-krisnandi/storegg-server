<%- include('../../partials/header.ejs') %> <%-
include('../../partials/navbar.ejs') %> <%-
include('../../partials/sidebar.ejs') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Create</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item"><a href="/payment">Payment</a></li>
            <li class="breadcrumb-item active">Create</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-12">
          <!-- general form elements -->
          <div class="card card-primary">
            <div class="card-header">
              <h3 class="card-title">Form tambah tipe pembayaran</h3>
            </div>
            <!-- /.card-header -->
            <!-- form start -->
            <form action="/payment/create" method="post">
              <div class="card-body">
                <div class="form-group">
                  <label for="type">Type</label>
                  <input
                    type="text"
                    class="form-control"
                    name="type"
                    id="type"
                    placeholder="Masukkan tipe pembayaran"
                  />
                </div>
                <div class="form-group">
                  <label>Bank</label>
                  <div class="select2-purple">
                    <select
                      class="form-control select2"
                      multiple="multiple"
                      data-placeholder="Pilih bank"
                      style="width: 100%"
                      name="banks"
                      required
                    >
                      <% banks.forEach(bank=> { %>
                      <option value="<%=bank._id%>">
                        <%= bank.name %> - <%= bank.nameBank %> - <%= bank.noRekening %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
              </div>
              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Simpan</button>
              </div>
            </form>
          </div>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
</div>
<!-- /.content-wrapper -->

<%- include('../../partials/footer.ejs') %> <%-
include('../../partials/js.ejs')%>